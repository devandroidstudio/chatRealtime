<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="30dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/baloo"
        android:text="@string/forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edit_email_fg"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:startIconCheckable="true"
        app:startIconTint="@color/black"
        app:boxStrokeColor="#3560ff"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeErrorColor="#F44336"
        android:hint="Email"
        app:hintTextColor="#3560ff"
        android:layout_width="match_parent"
        app:hintAnimationEnabled="true"
        app:endIconDrawable="@drawable/ic_baseline_close_24"
        app:endIconCheckable="true"
        app:endIconMode="clear_text"
        app:endIconTint="@color/black"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorText"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_edit_email_fg"
            android:background="@drawable/bg_input"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:id="@+id/btn_forget_password"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_dialog_forget_password"
        android:text="@string/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>