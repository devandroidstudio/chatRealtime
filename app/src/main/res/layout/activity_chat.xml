<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatActivity">
        <View
            android:id="@+id/ViewBackground"
            android:background="@drawable/bg_content_top"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@id/layoutSend"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="0dp"/>
        <View
            android:id="@+id/viewAppBar"
            android:background="#E8C2EF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/viewSupporter"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:tint="@color/white"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/image_back"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
        <FrameLayout
            android:id="@+id/layout_chat_image_status"
            app:layout_constraintStart_toEndOf="@id/image_back"
            app:layout_constraintTop_toTopOf="@id/image_back"
            app:layout_constraintBottom_toBottomOf="@id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_chat_user"
                android:src="@drawable/cool_background"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>
            <View
                android:visibility="gone"
                android:id="@+id/view_status_chat"
                android:background="@drawable/custom_status_users"
                android:layout_gravity="bottom|end"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"/>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:tint="@color/white"
            android:id="@+id/image_info"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:padding="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:fontFamily="@font/acme"
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"

            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/image_info"
            app:layout_constraintStart_toEndOf="@id/layout_chat_image_status"
            app:layout_constraintTop_toTopOf="@id/image_back" />

        <TextView
            android:id="@+id/text_view_status_chat_user"
            android:fontFamily="@font/acme"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="start"
            android:textSize="@dimen/_10ssp"
            android:textColor="?attr/sub_text_color"
            app:layout_constraintBottom_toBottomOf="@id/layout_chat_image_status"
            app:layout_constraintEnd_toStartOf="@id/image_info"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/layout_chat_image_status"
            app:layout_constraintTop_toBottomOf="@id/textName" />

        <View
            android:background="@color/teal_700"
            android:id="@+id/viewSupporter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/image_back"/>

        <androidx.recyclerview.widget.RecyclerView
            app:stackFromEnd="true"
            android:id="@+id/chatRecycleView"
            android:visibility="gone"
            android:padding="@dimen/_20sdp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:layout_below="@id/viewSupporter"
            android:layout_above="@id/inputMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/ViewBackground"
            app:layout_constraintTop_toBottomOf="@id/viewSupporter"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <FrameLayout
            android:id="@+id/layoutSend"
            android:background="@drawable/bg_chat_input"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp">
            <androidx.appcompat.widget.AppCompatImageView
                android:tint="@color/white"
                android:src="@drawable/ic_round_send_24"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/bg_chat_input"
            android:hint="Input a message"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:selectAllOnFocus="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layoutSend"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:gravity="center"
            android:text="@string/online"
            android:id="@+id/txtAvailability"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"
            android:background="#8BC34A"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewSupporter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>