<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/layout_image_message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_message_user"
            android:src="@drawable/cool_background"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_message_status_"
            android:layout_gravity="end|bottom"
            app:cardCornerRadius="20dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            app:cardForegroundColor="?attr/status_user_color"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
    <LinearLayout
        android:paddingStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/layout_image_message_user"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:fontFamily="@font/alatsi"
            android:textStyle="bold"
            android:textColor="?attr/text_color"
            android:text="Nguyen van a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/alatsi"
            android:textColor="?attr/sub_text_color"
            android:text="nguyen van a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>